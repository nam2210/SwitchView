<?xml version="1.0" encoding="utf-8"?>
<com.hnam.tlockview.DoorLockView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:dv_color="@color/colorOrange"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_indicator"
        android:layout_width="24dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_normal_indicator_shadow" />

    <com.hnam.tlockview.MyCircleView
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cv_color="@color/colorOrange"
        android:visibility="gone"
        />

</com.hnam.tlockview.DoorLockView>