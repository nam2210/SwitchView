<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape
            android:shape="ring"
            android:thickness="1dp"
            android:innerRadiusRatio="2.2">
            <padding
                android:bottom="-0.5dp"
                android:left="-0.5dp"
                android:right="-0.5dp"
                android:top="-0.5dp" />

            <solid android:color="#00CCCCCC" />

        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:thickness="1dp">
            <padding
                android:bottom="-0.5dp"
                android:left="-0.5dp"
                android:right="-0.5dp"
                android:top="-0.5dp" />

            <solid android:color="#10CCCCCC" />

        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:thickness="1dp"
            android:innerRadiusRatio="2.2">
            <padding
                android:bottom="-0.5dp"
                android:left="-0.5dp"
                android:right="-0.5dp"
                android:top="-0.5dp" />

            <solid android:color="#20CCCCCC" />

        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:thickness="4dp"
            android:innerRadiusRatio="2.2">
            <padding
                android:bottom="-2dp"
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp" />

            <solid android:color="#20CCCCCC" />

        </shape>
    </item>
    <item>
        <shape
            android:shape="ring"
            android:thickness="4dp"
            android:innerRadiusRatio="2.2">
            <padding
                android:bottom="-4dp"
                android:left="-4dp"
                android:right="-4dp"
                android:top="-4dp" />

            <solid android:color="#EECCCCCC" />

        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape
            android:shape="ring"
            android:thickness="2dp"
            android:innerRadiusRatio="2.2">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>

</layer-list>